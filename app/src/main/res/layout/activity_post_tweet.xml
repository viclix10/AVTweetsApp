<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codepath.apps.avtweetsapp.Activity.PostTweetActivity">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher"
        android:id="@+id/ivProfileImg"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:hint="user"
        android:textStyle="bold"
        android:id="@+id/tvUsername"
        android:paddingRight="5sp"
        android:textSize="13sp"
        android:ellipsize="end"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_light"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/ivProfileImg"
        android:layout_toRightOf="@+id/ivProfileImg"
        android:layout_toEndOf="@+id/ivProfileImg" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="\@handle"
        android:id="@+id/tvUserHandle"
        android:paddingRight="5sp"
        android:autoLink="all"
        android:linksClickable="true"
        android:textSize="10sp"
        android:gravity="center_vertical"
        android:layout_below="@+id/tvUsername"
        android:layout_toRightOf="@+id/ivProfileImg"
        android:layout_toEndOf="@+id/ivProfileImg" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Tweet Text"
        android:id="@+id/etBody"
        android:autoLink="all"
        android:linksClickable="true"
        android:textSize="15sp"
        android:autoText="true"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:layout_below="@+id/ivProfileImg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:paddingRight="5sp"
        android:textSize="10sp"
        android:id="@+id/tvTweets"
        android:layout_below="@+id/tvUserHandle"
        android:layout_alignLeft="@+id/tvUserHandle"
        android:layout_alignStart="@+id/tvUserHandle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tvFollowing"
        android:paddingRight="5sp"
        android:textSize="10sp"
        android:layout_alignTop="@+id/tvTweets"
        android:layout_toRightOf="@+id/tvTweets"
        android:layout_toEndOf="@+id/tvTweets" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tvFollowers"
        android:paddingRight="5sp"
        android:textSize="10sp"
        android:layout_below="@+id/tvUserHandle"
        android:layout_toRightOf="@+id/tvFollowing"
        android:layout_toEndOf="@+id/tvFollowing" />

</RelativeLayout>
